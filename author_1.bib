journal = {Evolution},
keywords = {Ecological adaptation,Magic traits,Mechanical constraints,Phylogenetic comparative analyses,Signal evolution,Suboscine birds,Vocal performance},
pages = {2784--2797},
pmid = {22946803},
title = {{Correlated evolution of beak morphology and song in the neotropical woodcreeper radiation}},
