issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {Anova,Categorical data,Experimental design,Hierarchical models,Interaction variance,Mixed-effects models,Variance components analysis},
number = {1},
pages = {14--24},
title = {{Nested by design: Model fitting and interpretation in a mixed model era}},
volume = {4},
year = {2013}
