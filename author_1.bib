issn = {2296-701X},
journal = {Frontiers in Ecology and Evolution},
keywords = {evolution,female,frontiers in ecology and,frontiersin,multiple signals,org,passerines,plumage coloration,song elaboration,www},
number = {April},
pages = {1--8},
title = {{Multiple Ornaments—Multiple Signaling Functions? The Importance of Song and UV Plumage Coloration in Female Superb Fairy-wrens (Malurus cyaneus)}},
url = {http://journal.frontiersin.org/Article/10.3389/fevo.2016.00043/abstract},
volume = {4},
