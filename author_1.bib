issn = {19326203},
journal = {PLoS ONE},
pages = {e85279},
pmid = {24454833},
title = {{Driving factors for the evolution of species-specific echolocation call design in new world free-tailed bats (Molossidae)}},
volume = {9},
year = {2014}
}
