issn = {00033472},
journal = {Animal Behaviour},
keywords = {acoustic adaptation hypothesis,by-eye method,low frequency,mobbing calls,phylogenetic comparative analysis,threshold method},
pages = {e74--e74},
publisher = {Elsevier Ltd},
title = {{The low-frequency acoustic structure of mobbing calls differs across habitat types in three passerine families}},
