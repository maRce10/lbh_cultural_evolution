issn = {2041210X},
journal = {Methods in Ecology and Evolution},
keywords = {,Hill diversity,Peru,alpha diversity,bats,beta diversity,dispersion,diversity metric,evenness,functional trait,gamma diversity,species richness},
number = {7},
pages = {809--820},
title = {{Decomposing functional diversity}},
volume = {8},
year = {2017}
}
