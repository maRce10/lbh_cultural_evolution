issn = {1461-0248},
journal = {Ecology letters},
keywords = {Biodiversity,Biological Evolution,Climate Change,Conservation of Natural Resources,Ecology,Ecology: trends,Ecosystem,Food Chain,Host-Parasite Interactions,Introduced Species,Models, Biological,Phylogeny},
month = {oct},
