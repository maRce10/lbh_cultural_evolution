file = {:home/m/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Lakens - 2013 - Calculating and reporting effect sizes to facilitate cumulative science A practical primer for t-tests and ANOVAs.pdf:pdf},
isbn = {1664-1078 (Print)},
