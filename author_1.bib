journal = {Condor},
number = {4},
pages = {853--878},
title = {{Behavioral, ecological and morphological correlates of foraging for arthropods by the hummingbirds of a tropical wet forest}},
url = {http://www.jstor.org/stable/10.2307/1369527},
volume = {97},
year = {1995}
