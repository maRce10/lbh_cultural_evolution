journal = {Proceedings of the Royal Society B: Biological Sciences},
keywords = {birds,coevolution,evolution,host,lice,parasite},
number = {1565},
pages = {811--817},
pmid = {15888414},
title = {{Adaptive significance of avian beak morphology for ectoparasite control.}},
volume = {272},
year = {2005}
}
