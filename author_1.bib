issn = {09609822},
journal = {Current Biology},
keywords = {group interaction,turn-taking,vocal coordination},
number = {22},
pages = {3661--3666.e3},
publisher = {Elsevier Ltd.},
title = {{Vocal Turn-Taking in Meerkat Group Calling Sessions}},
url = {https://doi.org/10.1016/j.cub.2018.09.065},
volume = {28},
year = {2018}
