keywords = {Cassin's vireo,birdsong,countersinging,syntax,vocal interaction},
pages = {23--32},
publisher = {Elsevier Ltd},
title = {{Accounting for syntax in analyses of countersinging reveals hidden vocal dynamics in a songbird with a large repertoire}},
