journal = {BMC Evolutionary Biology},
keywords = {,expression,seasnake,venom},
mendeley-tags = {expression,seasnake,venom},
pages = {1--9},
title = {{Expression pattern of three-finger toxin and phospholipase A2 genes in the venom glands of two sea snakes, Lapemis curtus and Acalyptophis peronii: Comparison of evolution of these toxins in land snakes, sea kraits and sea snakes}},
volume = {7},
