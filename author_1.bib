journal = {Molecular Ecology},
keywords = {Zonotrichia leucophrys,birdsong,genotyping-by-sequencing,hybrid zone,reproductive isolation,subspecies},
number = {11},
pages = {3011--3027},
title = {{Behavioural response to song and genetic divergence in two subspecies of white-crowned sparrows (Zonotrichia leucophrys)}},
