title = {{Habitat-dependent song divergence in the little greenbul: an analysis of environmental selection pressures on acoustic signals.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/12389730},
volume = {56},
year = {2002}
}
@article{Slabbekoorn2006,
