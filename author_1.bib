doi = {10.1016/j.cub.2017.02.067},
issn = {09609822},
journal = {Current Biology},
keywords = {Meiacanthus,adaptation,convergence,defense,evolution,hypotension,mimicry,opioid,toxin,venom},
number = {8},
pages = {1184--1191},
publisher = {Elsevier Ltd.},
title = {{The Evolution of Fangs, Venom, and Mimicry Systems in Blenny Fishes}},
