@article{Amezquita2009,
abstract = {Evolutionary divergence in behavioural traits related to mating may represent the initial stage of speciation. Direct{\$}\backslash{\$}r{\$}\backslash{\$}nselective forces are usually invoked to explain divergence in mate-recognition traits, often neglecting a role for{\$}\backslash{\$}r{\$}\backslash{\$}nneutral processes or concomitant differentiation in ecological traits. We adopted a multi-trait approach to obtain a deeper understanding of the mechanisms behind allopatric divergence in the Amazonian frog, Allobates femoralis. We tested the null hypothesis that geographic distance between populations correlates with genetic and phenotypic divergence, and compared divergence between mate-recognition (acoustic) and ecological (coloration, body-shape) traits. We quantified geographic variation in 39 phenotypic traits and a mitochondrial DNA marker among 125 individuals representing eight populations. Geographic variation in acoustic traits was pronounced and tracked the{\$}\backslash{\$}r{\$}\backslash{\$}nspatial genetic variation, which appeared to be neutral. Thus, the evolution of acoustic traits tracked the shared{\$}\backslash{\$}r{\$}\backslash{\$}nhistory of the populations, which is unexpected for pan-Amazonian taxa or for mate-recognition traits. Divergence in coloration appeared uncorrelated with genetic distance, and might be partly attributed to local selective{\$}\backslash{\$}r{\$}\backslash{\$}npressures, and perhaps to Batesian mimicry. Divergence in body-shape traits was low. The results obtained depict{\$}\backslash{\$}r{\$}\backslash{\$}na complex evolutionary scenario and emphasize the importance of considering multiple traits when disentangling{\$}\backslash{\$}r{\$}\backslash{\$}nthe forces behind allopatric divergence.},
