issn = {00033472},
journal = {Animal Behaviour},
keywords = {communication,continuity,evolution,homology,language,sound production},
pages = {229--237},
publisher = {Elsevier Ltd},
title = {{The speech-like properties of nonhuman primate vocalizations}},
url = {https://doi.org/10.1016/j.anbehav.2019.02.015},
volume = {151},
year = {2019}
}
